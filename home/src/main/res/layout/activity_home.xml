<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.story.view.Story
        android:id="@+id/storyHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStoreHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/museosans_500"
        android:gravity="center"
        android:text="Para saber mais, baixe o app na loja clicando aqui !"
        android:textSize="18sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="openPlayStore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyHome" />


    <TextView
        android:id="@+id/txtEmptyStoryHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/museosans_500"
        android:gravity="center"
        android:text="Ops!, ocorreu um problema. \nclique aqui e tente novamente"
        android:textColor="@color/red_EF5350"
        android:textSize="16sp"
        android:visibility="gone"
        android:background="@color/white_FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loadingHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>